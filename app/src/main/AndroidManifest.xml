<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.restaurantapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/organicfoodlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/organicfoodlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".admin.AdminHomeActivity"
            android:label="@string/title_activity_admin_home"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".admin.LoginAdminActivity" />
        <activity android:name=".UserActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".user.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".user.PasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".user.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity android:name=".user.DetailActivity" />
        <activity android:name=".user.FoodDetailActivity" />
    </application>

</manifest>