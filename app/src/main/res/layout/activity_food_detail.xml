<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.FoodDetailActivity">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/activity_detail_id"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_height="120dp"
                android:layout_width="match_parent"
                android:id="@+id/backdrop"
                android:src="@drawable/organiclogo"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="Meat"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/nameArabic"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="لحمة"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/priceTitle"
                android:text="Price:"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:text="20LE"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/view_shape"
                android:padding="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:text="You can add it in food cart to order it"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:autoSizeTextType="uniform"
                    android:text="Hope you like the Dish"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </LinearLayout>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/background_shape"
                android:id="@+id/addToCart"
                android:layout_marginTop="5dp"
                android:text="Add To Cart"
                android:textColor="@color/white"
               />

            <ProgressBar
                android:layout_height="90dp"
                android:layout_width="100dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:id="@+id/progressBarD"/>
        </LinearLayout>
    </ScrollView>






